<div>
  <div>
    <h1>
      List of your shops
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new shop
    </h2>

    <form action="/insert_shop" method="post">
      <div>
        <label for="website_box">
          Website
        </label>

        <input type="text" id="website_box" name="query_website">
      </div>

      <%# <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div> %>

      <div>
        <label for="name_of_shop_box">
          Name of shop
        </label>

        <input type="text" id="name_of_shop_box" name="query_name_of_shop">
      </div>

      <button>
        Create shop
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Website
        </th>

        <th>
          Name of shop
        </th>

        <th>
          User ID
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_shops.each do |a_shop| %>
      <tr>
        <td>
          <%= a_shop.id %>
        </td>

        <td>
          <%= a_shop.website %>
        </td>

        <td>
          <%= a_shop.name_of_shop %>
        </td>

        <td>
          <%= a_shop.user_shop_id %>
        </td>
        <td>
          <%= time_ago_in_words(a_shop.updated_at) %> ago
        </td>

        <td>
          <a href="/shops/<%= a_shop.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
